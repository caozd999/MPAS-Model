<?xml version="1.0"?>
<config case="init_step">

  <add_link source="../../../meshes/transect/build_transect_mesh/transectmesh.nc" dest="mesh.nc"/>
  <add_link source="../../../meshes/transect/build_transect_mesh/graph.info" dest="graph.info"/>
	<add_executable source="model" dest="ocean_model"/>

	<namelist name="namelist.ocean" mode="init">
		<template file="init_template.xml" path_base="script_configuration_dir"/>
		<option name="config_use_variable_drag">.true.</option>
		<option name="config_idealized_profile">.true.</option>
		<option name="config_idealized_profile_Lcoast">0.3</option>
		<option name="config_idealized_profile_Scoast">0.00125</option>
		<option name="config_idealized_profile_Lshore">0.6</option>
		<option name="config_idealized_profile_Sshore">0.0025</option>
		<option name="config_idealized_profile_Lmarsh">0.1</option>
		<option name="config_idealized_profile_Smarsh">0.0</option>
		<option name="config_idealized_profile_Cd">0.0025</option>
		<option name="config_idealized_profile_Cd_marsh">1.0</option>
		<option name="config_tidal_boundary_left_bottom_depth">0.0</option>
		<option name="config_tidal_boundary_left_value">0.0</option>
		<option name="config_tidal_boundary_right_value">8.0e3</option>
		<option name="config_tidal_forcing_monochromatic_baseline">3.0</option>
    <option name="config_alter_ICs_for_pbcs">.true.</option>
	</namelist>

	<streams name="streams.ocean" keep="immutable" mode="init">
		<template file="init_template.xml" path_base="script_configuration_dir"/>
	</streams>

	<run_script name="run.py">
		<model_run procs="1" threads="1" namelist="namelist.ocean" streams="streams.ocean"/>
	</run_script>
</config>
